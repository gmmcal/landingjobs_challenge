<div class="container">
  <div class="languages">
    <%@languages.in_groups_of(4, false) do |languages|%>
      <div class="row">
        <%languages.each do |language| %>
          <div class="col-md-3">
            <%=link_to language.name, "#", class: 'language btn btn-default', id: dom_id(language), data: { id: language.id }%>
          </div>
        <%end%>
      </div>
    <%end%>
  </div>
  <hr>
  <div class="row">
    <div class="search-button col-md-12">
      <%=link_to "Search Companies", companies_path, remote: true, class: 'search btn btn-primary' %>
    </div>
  </div>
  <hr>
</div>
<div id="companies" class="container"></div>
